<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Neon Gap Runner</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            touch-action: none;
            user-select: none;
            -webkit-user-select: none;
        }
        
        body {
            background: #000;
            overflow: hidden;
            font-family: 'Courier New', monospace;
        }
        
        #gameCanvas {
            display: block;
        }
        
        #ui {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            color: #00ffff;
            font-size: 24px;
            text-shadow: 0 0 10px #00ffff;
            pointer-events: none;
            z-index: 10;
        }
        
        #score {
            font-size: 32px;
            font-weight: bold;
        }
        
        #highScore {
            font-size: 14px;
            opacity: 0.8;
            margin-top: 5px;
        }
        
        #speedIndicator {
            font-size: 12px;
            opacity: 0.6;
            margin-top: 5px;
            color: #ff00ff;
        }
        
        #gameOver {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #ff0040;
            font-size: 48px;
            text-shadow: 0 0 20px #ff0040;
            display: none;
            z-index: 20;
        }
        
        #gameOver p {
            font-size: 20px;
            color: #00ffff;
            margin-top: 20px;
            text-shadow: 0 0 10px #00ffff;
        }
        
        #startScreen {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #00ffff;
            z-index: 30;
        }
        
        #startScreen h1 {
            font-size: 42px;
            text-shadow: 0 0 20px #00ffff;
            margin-bottom: 30px;
        }
        
        #startScreen p {
            font-size: 18px;
            margin: 10px 0;
            opacity: 0.9;
        }
        
        .touch-zone {
            position: absolute;
            top: 0;
            width: 50%;
            height: 100%;
            z-index: 5;
        }
        
        #leftZone { left: 0; }
        #rightZone { right: 0; }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
    </style>
</head>
<body>
    <div id="ui">
        <div id="score">0</div>
        <div id="highScore">High Score: 0</div>
        <div id="speedIndicator">SPEED: 100%</div>
    </div>
    
    <div id="startScreen">
        <h1 class="pulse">NEON GAP</h1>
        <p>Tap LEFT side → Move LEFT</p>
        <p>Tap RIGHT side → Move RIGHT</p>
        <p style="margin-top: 30px; font-size: 14px; opacity: 0.7;">Fly through the gaps!</p>
        <p style="font-size: 14px; opacity: 0.7;">Hit wall OR miss gap = Game Over</p>
    </div>
    
    <div id="gameOver">
        <div>GAME OVER</div>
        <p>Tap to restart</p>
    </div>
    
    <div id="leftZone" class="touch-zone"></div>
    <div id="rightZone" class="touch-zone"></div>
    
    <canvas id="gameCanvas"></canvas>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreEl = document.getElementById('score');
        const highScoreEl = document.getElementById('highScore');
        const speedIndicatorEl = document.getElementById('speedIndicator');
        const gameOverEl = document.getElementById('gameOver');
        const startScreenEl = document.getElementById('startScreen');
        
        let gameState = 'start';
        let score = 0;
        let highScore = localStorage.getItem('neonGapHighScore') || 0;
        highScoreEl.textContent = `High Score: ${highScore}`;
        
        function resize() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        resize();
        window.addEventListener('resize', resize);
        
        const CENTER_X = () => canvas.width / 2;
        const DIVIDER_WIDTH = 28;
        const WALL_LEFT = () => CENTER_X() - DIVIDER_WIDTH / 2;
        const WALL_RIGHT = () => CENTER_X() + DIVIDER_WIDTH / 2;
        
        const START_SPEED = 2;
        const MAX_SPEED = 12;
        let currentSpeed = START_SPEED;
        
        const player = {
            x: 0,
            y: 0,
            radius: 10,
            targetX: 0,
            side: 'left',
            trail: [],
            glowIntensity: 0
        };
        
        function resetPlayer() {
            player.y = canvas.height - 200;
            player.side = 'left';
            player.targetX = CENTER_X() - 100;
            player.x = player.targetX;
            player.trail = [];
        }
        
        resetPlayer();
        
        let wallSegments = [];
        let gaps = []; // Store gaps persistently
        let stars = [];
        let gridOffset = 0;
        let backgroundHue = 200;
        
        const MIN_GAP_HEIGHT = 100;
        const MAX_GAP_HEIGHT = 180;
        const MIN_WALL_HEIGHT = 150;
        const MAX_WALL_HEIGHT = 350;
        
        for (let i = 0; i < 100; i++) {
            stars.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                size: Math.random() * 2,
                speed: Math.random() * 0.5 + 0.1
            });
        }
        
        function addSegmentAtTop() {
            const wallHeight = MIN_WALL_HEIGHT + Math.random() * (MAX_WALL_HEIGHT - MIN_WALL_HEIGHT);
            
            let startY;
            if (wallSegments.length === 0) {
                startY = -wallHeight;
            } else {
                const lastSeg = wallSegments[wallSegments.length - 1];
                const gapHeight = MIN_GAP_HEIGHT + Math.random() * (MAX_GAP_HEIGHT - MIN_GAP_HEIGHT);
                startY = lastSeg.y - wallHeight - gapHeight;
            }
            
            wallSegments.push({
                y: startY,
                height: wallHeight,
                passed: false
            });
        }
        
        function initWall() {
            wallSegments = [];
            gaps = [];
            addSegmentAtTop();
            addSegmentAtTop();
            addSegmentAtTop();
        }
        
        function updateWall() {
            // Move segments
            for (let i = 0; i < wallSegments.length; i++) {
                wallSegments[i].y += currentSpeed;
            }
            
            // Move gaps
            for (let i = 0; i < gaps.length; i++) {
                gaps[i].y += currentSpeed;
            }
            
            // Remove old segments
            if (wallSegments.length > 0) {
                const firstSeg = wallSegments[0];
                if (firstSeg.y > canvas.height + 50) {
                    wallSegments.shift();
                    score++;
                    scoreEl.textContent = score;
                    
                    const targetSpeed = Math.min(MAX_SPEED, START_SPEED + (score * 0.08));
                    currentSpeed += (targetSpeed - currentSpeed) * 0.02;
                }
            }
            
            // Remove old gaps
            while (gaps.length > 0 && gaps[0].y > canvas.height + 50) {
                gaps.shift();
            }
            
            // Add new segments at top
            if (wallSegments.length > 0) {
                const topSeg = wallSegments[wallSegments.length - 1];
                if (topSeg.y > -500) {
                    const lastSeg = wallSegments[wallSegments.length - 1];
                    const gapHeight = MIN_GAP_HEIGHT + Math.random() * (MAX_GAP_HEIGHT - MIN_GAP_HEIGHT);
                    const wallHeight = MIN_WALL_HEIGHT + Math.random() * (MAX_WALL_HEIGHT - MIN_WALL_HEIGHT);
                    
                    // Add gap before new wall segment
                    gaps.push({
                        y: lastSeg.y - gapHeight,
                        height: gapHeight,
                        x: WALL_LEFT(),
                        width: DIVIDER_WIDTH,
                        passed: false
                    });
                    
                    wallSegments.push({
                        y: lastSeg.y - gapHeight - wallHeight,
                        height: wallHeight,
                        passed: false
                    });
                }
            }
        }
        
        function handleInput(side) {
            if (gameState === 'start') {
                startGame();
                return;
            }
            if (gameState === 'gameover') {
                resetGame();
                return;
            }
            
            if (gameState === 'playing') {
                player.side = side;
                player.targetX = side === 'left' 
                    ? CENTER_X() - 100 
                    : CENTER_X() + 100;
            }
        }
        
        document.getElementById('leftZone').addEventListener('touchstart', (e) => {
            e.preventDefault();
            handleInput('left');
        });
        
        document.getElementById('rightZone').addEventListener('touchstart', (e) => {
            e.preventDefault();
            handleInput('right');
        });
        
        document.getElementById('leftZone').addEventListener('mousedown', (e) => {
            e.preventDefault();
            handleInput('left');
        });
        
        document.getElementById('rightZone').addEventListener('mousedown', (e) => {
            e.preventDefault();
            handleInput('right');
        });
        
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft' || e.key === 'a') handleInput('left');
            if (e.key === 'ArrowRight' || e.key === 'd') handleInput('right');
        });
        
        function startGame() {
            gameState = 'playing';
            startScreenEl.style.display = 'none';
            initWall();
        }
        
        function resetGame() {
            gameState = 'playing';
            gameOverEl.style.display = 'none';
            score = 0;
            currentSpeed = START_SPEED;
            scoreEl.textContent = '0';
            speedIndicatorEl.textContent = 'SPEED: 100%';
            
            resetPlayer();
            initWall();
        }
        
        function gameOver() {
            gameState = 'gameover';
            gameOverEl.style.display = 'block';
            
            if (score > highScore) {
                highScore = score;
                localStorage.setItem('neonGapHighScore', highScore);
                highScoreEl.textContent = `High Score: ${highScore}`;
            }
        }
        
        function update() {
            if (gameState !== 'playing') return;
            
            updateWall();
            
            const speedPercent = Math.round((currentSpeed / START_SPEED) * 100);
            speedIndicatorEl.textContent = `SPEED: ${speedPercent}%`;
            
            player.x += (player.targetX - player.x) * 0.12;
            
            player.trail.push({ x: player.x, y: player.y, alpha: 1 });
            if (player.trail.length > 8) player.trail.shift();
            player.trail.forEach((t, i) => {
                t.alpha = i / player.trail.length;
            });
            
            player.glowIntensity = Math.sin(Date.now() * 0.01) * 0.5 + 0.5;
            
            gridOffset += currentSpeed;
            if (gridOffset > 40) gridOffset = 0;
            
            stars.forEach(star => {
                star.y += star.speed * currentSpeed;
                if (star.y > canvas.height) {
                    star.y = 0;
                    star.x = Math.random() * canvas.width;
                }
            });
            
            backgroundHue = (backgroundHue + 0.1) % 360;
            
            checkCollisions();
        }
        
        function checkCollisions() {
            const playerLeft = player.x - player.radius;
            const playerRight = player.x + player.radius;
            const playerTop = player.y - player.radius;
            const playerBottom = player.y + player.radius;
            const playerCenterY = (playerTop + playerBottom) / 2;
            
            const wallL = WALL_LEFT();
            const wallR = WALL_RIGHT();
            
            // Check if player is horizontally in wall area
            if (playerRight > wallL && playerLeft < wallR) {
                // Check if hitting any wall segment
                let hittingWall = false;
                
                for (let seg of wallSegments) {
                    const segTop = seg.y;
                    const segBottom = seg.y + seg.height;
                    
                    if (playerBottom > segTop + 5 && playerTop < segBottom - 5) {
                        hittingWall = true;
                        break;
                    }
                }
                
                if (hittingWall) {
                    gameOver();
                    return;
                }
            }
            
            // Check if player MISSED a gap
            // A gap is "missed" if it passes the player's Y position without the player being in it
            for (let gap of gaps) {
                // Gap is at player level if gap top is above player and gap bottom is below player
                const gapTop = gap.y;
                const gapBottom = gap.y + gap.height;
                
                if (!gap.passed && gapTop < playerCenterY && gapBottom > playerCenterY) {
                    // Player is at this gap's Y position - check if they're in the gap horizontally
                    const playerInGapHorizontally = (playerLeft < WALL_RIGHT() && playerRight > WALL_LEFT());
                    
                    if (playerInGapHorizontally) {
                        // Check if player is actually inside the gap (not just at wall X position)
                        // Player center must be within gap bounds
                        if (playerCenterY > gapTop + 10 && playerCenterY < gapBottom - 10) {
                            // Player successfully in gap
                            gap.passed = true;
                        } else {
                            // Player at gap Y but not fully in it = missed
                            gameOver();
                            return;
                        }
                    }
                }
                
                // Mark gap as passed once it's well below player
                if (!gap.passed && gapTop > playerCenterY + 50) {
                    // Gap passed player without player going through it
                    gameOver();
                    return;
                }
            }
        }
        
        function draw() {
            ctx.fillStyle = '#000';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            const hue = backgroundHue;
            
            const gradient = ctx.createLinearGradient(0, 0, 0, canvas.height);
            gradient.addColorStop(0, `hsla(${hue}, 70%, 3%, 1)`);
            gradient.addColorStop(0.5, `hsla(${hue + 40}, 60%, 8%, 1)`);
            gradient.addColorStop(1, `hsla(${hue + 80}, 50%, 12%, 1)`);
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            ctx.fillStyle = 'white';
            stars.forEach(star => {
                ctx.globalAlpha = Math.random() * 0.6 + 0.2;
                ctx.beginPath();
                ctx.arc(star.x, star.y, star.size, 0, Math.PI * 2);
                ctx.fill();
            });
            ctx.globalAlpha = 1;
            
            ctx.strokeStyle = `hsla(${hue}, 50%, 30%, 0.2)`;
            ctx.lineWidth = 1;
            
            for (let i = -20; i <= 20; i++) {
                const x = CENTER_X() + i * 80;
                ctx.beginPath();
                ctx.moveTo(CENTER_X(), 0);
                ctx.lineTo(x, canvas.height);
                ctx.stroke();
            }
            
            for (let i = 0; i < canvas.height / 40 + 2; i++) {
                const y = (i * 40 + gridOffset) % (canvas.height + 40) - 20;
                ctx.beginPath();
                ctx.moveTo(0, y);
                ctx.lineTo(canvas.width, y);
                ctx.stroke();
            }
            
            const time = Date.now() * 0.002;
            
            gaps.forEach((gap, index) => {
                const pulse = Math.sin(time + index) * 0.3 + 0.7;
                
                ctx.shadowBlur = 30 * pulse;
                ctx.shadowColor = `hsla(${hue + 180}, 100%, 70%, ${pulse})`;
                
                ctx.strokeStyle = `hsla(${hue + 180}, 100%, 90%, ${pulse})`;
                ctx.lineWidth = 4;
                ctx.beginPath();
                ctx.moveTo(gap.x - 5, gap.y);
                ctx.lineTo(gap.x + gap.width + 5, gap.y);
                ctx.stroke();
                
                ctx.beginPath();
                ctx.moveTo(gap.x - 5, gap.y + gap.height);
                ctx.lineTo(gap.x + gap.width + 5, gap.y + gap.height);
                ctx.stroke();
                
                ctx.shadowBlur = 0;
                
                ctx.strokeStyle = `hsla(${hue + 180}, 100%, 70%, 0.6)`;
                ctx.lineWidth = 2;
                ctx.setLineDash([5, 5]);
                ctx.beginPath();
                ctx.moveTo(gap.x, gap.y);
                ctx.lineTo(gap.x, gap.y + gap.height);
                ctx.moveTo(gap.x + gap.width, gap.y);
                ctx.lineTo(gap.x + gap.width, gap.y + gap.height);
                ctx.stroke();
                ctx.setLineDash([]);
                
                const gapGradient = ctx.createLinearGradient(gap.x, gap.y, gap.x, gap.y + gap.height);
                gapGradient.addColorStop(0, `hsla(${hue + 180}, 100%, 60%, 0)`);
                gapGradient.addColorStop(0.5, `hsla(${hue + 180}, 100%, 60%, 0.15)`);
                gapGradient.addColorStop(1, `hsla(${hue + 180}, 100%, 60%, 0)`);
                ctx.fillStyle = gapGradient;
                ctx.fillRect(gap.x, gap.y, gap.width, gap.height);
            });
            
            ctx.fillStyle = `hsla(${hue + 180}, 90%, 55%, 1)`;
            ctx.shadowBlur = 25;
            ctx.shadowColor = `hsla(${hue + 180}, 100%, 70%, 1)`;
            
            wallSegments.forEach(seg => {
                if (seg.height > 0) {
                    ctx.fillRect(WALL_LEFT(), seg.y, DIVIDER_WIDTH, seg.height);
                    
                    ctx.fillStyle = `hsla(${hue + 180}, 100%, 85%, 1)`;
                    ctx.fillRect(WALL_LEFT() + 10, seg.y, 8, seg.height);
                    ctx.fillStyle = `hsla(${hue + 180}, 90%, 55%, 1)`;
                }
            });
            
            ctx.shadowBlur = 0;
            
            player.trail.forEach((t, i) => {
                const alpha = t.alpha * 0.6;
                const size = player.radius * (0.3 + i / player.trail.length * 0.7);
                ctx.fillStyle = `rgba(0, 255, 255, ${alpha})`;
                ctx.beginPath();
                ctx.arc(t.x, t.y, size, 0, Math.PI * 2);
                ctx.fill();
            });
            
            const glowSize = 25 + player.glowIntensity * 15;
            ctx.shadowB